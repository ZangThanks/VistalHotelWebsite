<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_2.xsd"
             version="3.2">
    <persistence-unit name="mariadb">
        <class>iuh.fit.vistalhotelwebsite.model.Admin</class>
        <class>iuh.fit.vistalhotelwebsite.model.Booking</class>
        <class>iuh.fit.vistalhotelwebsite.model.BookingDetail</class>
        <class>iuh.fit.vistalhotelwebsite.model.BookingService</class>
        <class>iuh.fit.vistalhotelwebsite.model.Customer</class>
        <class>iuh.fit.vistalhotelwebsite.model.CustomerVoucher</class>
        <class>iuh.fit.vistalhotelwebsite.model.EarlyCheckin</class>
        <class>iuh.fit.vistalhotelwebsite.model.Employee</class>
        <class>iuh.fit.vistalhotelwebsite.model.MaintenanceRequest</class>
        <class>iuh.fit.vistalhotelwebsite.model.Promotion</class>
        <class>iuh.fit.vistalhotelwebsite.model.Report</class>
        <class>iuh.fit.vistalhotelwebsite.model.Review</class>
        <class>iuh.fit.vistalhotelwebsite.model.RoomType</class>
        <class>iuh.fit.vistalhotelwebsite.model.Room</class>
        <class>iuh.fit.vistalhotelwebsite.model.RoomTypePromotion</class>
        <class>iuh.fit.vistalhotelwebsite.model.Service</class>
        <class>iuh.fit.vistalhotelwebsite.model.User</class>
        <class>iuh.fit.vistalhotelwebsite.model.Voucher</class>
        <properties>
            <property name="jakarta.persistence.jdbc.driver"
                      value="org.mariadb.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:mariadb://localhost:3306/vistalhoteldbs"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password"
                      value="123456789"/>

            <property name="jakarta.persistence.jdbc.dialect"
                      value="org.hibernate.dialect.MariaDBDialect"/>
            <!--            <property name="hibernate.dialect" -->
            <!--                      value="org.hibernate.dialect.MariaDBDialect"/>-->

            <!--            <property name="hibernate.show_sql" value="true"/>-->
            <!--            <property name="hibernate.format_sql" value="true"/>-->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>

    </persistence-unit>
</persistence>
